<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.png</path>
		</image>
	</view>

	<view name="system">
                <image name="console" extra="true">
                   <origin>0.5 0.5</origin>
                   <pos>0.325 0.475</pos>
                   <maxSize>0.65 0.65</maxSize>
                   <path>./_inc/console.png</path>
                </image>
                
                <image name="snap" extra="true">
                   <origin>0 0</origin>
                   <pos>0 0</pos>
                   <maxSize>1 1</maxSize>
                   <zIndex>1</zIndex>
                   <path>./_inc/systemsnap.png</path>
                </image>                
                
                <image name="flyer" extra="true">
                   <origin>0.5 0.5</origin>
                   <pos>0.8 0.475</pos>
                   <maxSize>0.65 0.65</maxSize>
                   <path>./_inc/flyer.png</path>
                </image>
	</view>
  
	<view name="basic,detailed,video">
                <image name="snap" extra="true">
                   <origin>0 0</origin>
                   <pos>0 0</pos>
                   <maxSize>1 1</maxSize>
                   <zIndex>1</zIndex>
                   <path>./_inc/systemsnap.png</path>
                </image>                
	</view>  

</theme>
